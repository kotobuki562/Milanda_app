<div id="posts" class="main posts-new">
  <div class="wrapper">
    <h1 class="form-heading">EDIT ME!</h1>

    <%= form_tag("/posts/#{@post.id}/update")do %>
    <div class="form">
      <div class="form-body">
      <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        <textarea name="content"><%= @post.content %></textarea>
        <input type="submit" value="Save">
      </div>
    </div>
    <% end %>

  </div>
</div>
<footer>
        <div class="wrapper">
            <p><small>&copy; 2020 Miranda</small></p>
        </div>
    </footer>