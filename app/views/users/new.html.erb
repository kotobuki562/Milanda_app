<div id="posts" class="main users-new">
  <div class="wrapper">
    <div class="form-heading">Are You Ready??</div>
    <div class="form users-form">
      <div class="form-body">
      <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
      <%= form_tag("/users/create")do %>
        <p>ユーザー名</p>
        <input name="name" class="form-content" value="<%= @user.name %>">
        
        <p>メールアドレス</p>
        <input name="email" class="form-content" value="<%= @user.email %>">
        

        <p>パスワード</p>
        <input class="form-content" type="password" name="password" value="<%= @user.password %>">
        <input type="submit" value="Signup">
        <% end %>
      </div>
    </div>
  </div>
</div>
<footer>
        <div class="wrapper">
            <p><small>&copy; 2020 Miranda</small></p>
        </div>
    </footer>